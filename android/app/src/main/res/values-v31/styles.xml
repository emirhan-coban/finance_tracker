<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ Splash Screen Theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background_new</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowSplashScreenBackground">#F0F2F8</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_transparent_new</item>
        <item name="android:windowSplashScreenIconBackgroundColor">#F0F2F8</item>
    </style>
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background_new</item>
    </style>
</resources>
